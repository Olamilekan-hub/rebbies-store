# .env file for Rebbie's Store Backend
# Place this file in the backend directory
# Copy this file to .env and update the values

# ================================================
# REBBIE'S STORE - BACKEND ENVIRONMENT VARIABLES
# ================================================

# Node Environment
NODE_ENV=development

# ================================================
# DATABASE CONFIGURATION
# ================================================
# Local PostgreSQL database for development
DATABASE_URL=postgresql://username:password@localhost:5432/rebbies_store_db

# For production (Render will auto-generate this)
# DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# ================================================
# AUTHENTICATION SECRETS
# ================================================
# Generate these with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-here-generate-new-one
COOKIE_SECRET=your-super-secret-cookie-token-here-generate-new-one

# ================================================
# PAYSTACK CONFIGURATION (Nigerian Payment Gateway)
# ================================================
# Test keys (replace with live keys for production)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Live keys (use in production)
# PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key
# PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key

# ================================================
# FLUTTERWAVE CONFIGURATION (Alternative Payment)
# ================================================
# Test keys
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key_here

# Live keys (use in production)
# FLUTTERWAVE_SECRET_KEY=FLWSECK-your_live_secret_key
# FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_live_public_key

# ================================================
# CLOUDINARY CONFIGURATION (Image Storage)
# ================================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ================================================
# CORS CONFIGURATION
# ================================================
# Frontend URLs (update for production)
STORE_CORS=http://localhost:3000
ADMIN_CORS=http://localhost:7001

# Production CORS (update when deploying)
# STORE_CORS=https://rebbies-store.vercel.app
# ADMIN_CORS=https://admin.rebbies-store.com

# ================================================
# REDIS CONFIGURATION (Optional for development)
# ================================================
# Local Redis (install Redis or comment out for in-memory)
REDIS_URL=redis://localhost:6379

# Production Redis (Render can provide managed Redis)
# REDIS_URL=redis://username:password@hostname:port

# ================================================
# EMAIL CONFIGURATION (Optional - for order confirmations)
# ================================================
# Using SendGrid or similar service
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=orders@rebbies-store.com

# ================================================
# ADMIN USER CONFIGURATION
# ================================================
# Default admin user (will be created on first run)
# ADMIN_EMAIL=admin@rebbies-store.com
ADMIN_EMAIL=adebukolaolamilekan123@gmail.com
ADMIN_PASSWORD=SecurePassword123!

# ================================================
# NIGERIAN SPECIFIC CONFIGURATIONS
# ================================================
# Default currency
DEFAULT_CURRENCY=NGN

# Business information
STORE_NAME=Rebbie's Store
# STORE_EMAIL=contact@rebbies-store.com
STORE_EMAIL=adebukolaolamilekan123@gmail.com
STORE_PHONE=+234-806-577-6378

# Business address (Lagos, Nigeria)
STORE_ADDRESS=Lagos, Nigeria
STORE_CITY=Lagos
STORE_STATE=Lagos State
STORE_COUNTRY=Nigeria
STORE_ZIP=100001

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
# Set to false to disable auto-opening browser
OPEN_BROWSER=true

# API port (default is 9000)
PORT=9000

# Log level
LOG_LEVEL=info